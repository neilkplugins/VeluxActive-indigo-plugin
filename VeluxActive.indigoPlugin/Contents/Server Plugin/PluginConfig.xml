<?xml version="1.0"?>
<PluginConfig>
	<Field id="Label4" type="label" fontSize="small" fontColor="darkgray"><Label>You will need an account from Velux Active app, and confirm you can control blinds and windows in the app before configuring this plugin</Label>
	</Field>
	<Field id="velux_account" type="textfield" >
		<Label>Velux Active Account eMail Address</Label>
	</Field>
	<Field id="velux_password" type="textfield" secure="true">
		<Label>Velux Active Account Password</Label>
	</Field>
	<Field id="refresh_frequency" type="textfield" defaultValue="60">
	<Label>Enter Polling Frequency in Seconds:</Label>
	</Field>
	<Field id="Label6" type="label" fontSize="small" fontColor="darkgray"><Label>This is the time between updating devices using the API</Label>
	</Field>
	<Field id="simpleseparator4" type="separator">
	</Field>
	<Field id="Label7" type="label" fontSize="small" fontColor="darkgray"><Label>If you are having problems with the plugin (or you are instructed by support), you can enable extra logging in the Event Log window by checking this button. Use with caution.</Label>
	</Field>
	<Field id="simpleseparator5" type="separator">
	</Field>
	<Field id="showDebugInfo" type="checkbox">
		<Label>Enable debugging:</Label>
		<Description>(not recommended) and requires plugin restart</Description>
	</Field>
	<!--Hidden Controls-->

	<Field id="access_token" type="textfield" hidden="True">
		<Description>Stores Access Token</Description>
	</Field>
	<Field id="refresh_token" type="textfield" hidden="True">
		<Description>Stores Refresh Token</Description>
	</Field>
</PluginConfig>
